{
    "name": "CUDA Development Container",
    "build": {
        "dockerfile": "Dockerfile",
        "context": "."
    },
    "runArgs": [
        "--gpus=all"
    ],
    "customizations": {
        "vscode": {
            "extensions": [
                "llvm-vs-code-extensions.vscode-clangd",
                "ms-python.python",
                "ms-python.black-formatter",
                "nvidia.nsight-vscode-edition"
            ]
        }
    },
    "remoteUser": "devuser"
}
